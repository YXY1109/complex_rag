# 统一RAG服务环境变量配置
# 复制此文件为 .env 并根据实际情况修改配置

# ======================
# 应用基本配置
# ======================
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=info

# ======================
# 数据库配置
# ======================
MYSQL_ROOT_PASSWORD=your_root_password_here
DATABASE_NAME=complex_rag
DATABASE_USER=raguser
DATABASE_PASSWORD=your_database_password_here
MYSQL_PORT=3306

# ======================
# Redis配置
# ======================
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# ======================
# Milvus向量数据库配置
# ======================
MILVUS_PORT=19530

# ======================
# Elasticsearch配置
# ======================
ELASTICSEARCH_PORT=9200

# ======================
# MinIO对象存储配置
# ======================
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_PORT=9000
MINIO_BUCKET=rag-documents

# ======================
# AI模型配置
# ======================
# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic配置
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama配置
OLLAMA_HOST=http://ollama:11434
OLLAMA_PORT=11434

# ======================
# 外部AI服务配置
# ======================
# BCE服务配置
BCE_SERVICE_HOST=bce-service
BCE_SERVICE_PORT=7001

# Qwen3服务配置
QWEN3_SERVICE_HOST=qwen3-service
QWEN3_SERVICE_PORT=7002

# OCR服务配置
OCR_SERVICE_HOST=ocr-service
OCR_SERVICE_PORT=7004

# PDF服务配置
PDF_SERVICE_HOST=pdf-service
PDF_SERVICE_PORT=7002

# ======================
# 网络和代理配置
# ======================
# Nginx配置
NGINX_PORT=80
NGINX_SSL_PORT=443

# Kibana配置
KIBANA_PORT=5601

# ======================
# 安全配置
# ======================
# JWT配置（如果启用认证）
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS配置
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# ======================
# 性能配置
# ======================
# 工作进程数（生产环境建议设置为CPU核心数）
WORKERS=1

# 请求限制
MAX_REQUEST_SIZE=100MB
REQUEST_TIMEOUT=300

# ======================
# 监控和日志配置
# ======================
# 日志级别
LOG_LEVEL=info

# 日志文件路径
LOG_FILE_PATH=/app/logs/unified_rag.log

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# ======================
# 开发环境配置
# ======================
# 仅在开发环境使用
DEV_RELOAD=false
DEV_ACCESS_LOG=true